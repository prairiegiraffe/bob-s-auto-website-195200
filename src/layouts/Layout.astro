export interface Props {
  title: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
  canonicalURL?: string;
  noindex?: boolean;
}

const {
  title,
  description = "Your Business - Professional local service business providing exceptional solutions for your needs.",
  keywords = "local service, business, professional services, quality solutions",
  ogImage = "/og-image.jpg",
  canonicalURL = Astro.url.href,
  noindex = false
} = Astro.props;

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const siteName = "Your Business";
const fullTitle = title === siteName ? title : `${title} | ${siteName}`;
